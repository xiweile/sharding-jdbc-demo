<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 应用日志级别 -->
    <logger name="com.example.shardingjdbc" level="DEBUG"/>

    <!-- ShardingSphere相关日志 -->
    <logger name="org.apache.shardingsphere" level="DEBUG"/>
    <logger name="org.apache.shardingsphere.driver.jdbc" level="DEBUG"/>
    <logger name="org.apache.shardingsphere.infra" level="INFO"/>
    <logger name="org.apache.shardingsphere.metadata" level="INFO"/>
    <logger name="org.apache.shardingsphere.parser" level="INFO"/>
    <logger name="org.apache.shardingsphere.rewrite" level="INFO"/>
    <logger name="org.apache.shardingsphere.route" level="INFO"/>
    <logger name="org.apache.shardingsphere.sql" level="DEBUG"/>
    <logger name="org.apache.shardingsphere.transaction" level="INFO"/>

    <!-- MyBatis日志 -->
    <logger name="com.example.shardingjdbc.mapper" level="DEBUG"/>

    <!-- HikariCP连接池日志 -->
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="INFO"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="INFO"/>

    <!-- SQL日志 -->
    <logger name="org.apache.ibatis" level="DEBUG"/>
    <logger name="java.sql" level="DEBUG"/>
    <logger name="java.sql.Connection" level="DEBUG"/>
    <logger name="java.sql.Statement" level="DEBUG"/>
    <logger name="java.sql.PreparedStatement" level="DEBUG"/>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
